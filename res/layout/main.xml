<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/theme_global_background">

	<RelativeLayout android:id="@+id/main_dock_relative_layout"
		android:layout_width="fill_parent" android:layout_height="100dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_marginBottom="5dp"
		android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
		android:background="@drawable/full_block_background">

		<LinearLayout android:id="@+id/main_dock_linear_layout"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_alignParentLeft="true" android:layout_alignParentTop="true">

			<RelativeLayout android:id="@+id/main_catalogue_button"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_marginRight="1dp" android:layout_weight="1"
				android:background="@color/theme_block_background_gray">

				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="5dp" android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true" android:background="@color/theme_pink_light">
				</RelativeLayout>

				<TextView android:id="@+id/main_dock_catalogue_label"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerHorizontal="true" android:text="catalogue" />
				<ImageView android:id="@+id/imageView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:src="@drawable/button_catalogue_dock_gray"/>
			</RelativeLayout>

			<RelativeLayout android:id="@+id/main_search_button"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_marginLeft="1dp" android:layout_marginRight="1dp"
				android:layout_weight="1" android:background="@color/theme_block_background_gray">

				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="5dp" android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true" android:background="@color/theme_yellow_light">
				</RelativeLayout>

				<TextView android:id="@+id/main_dock_search_label"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerHorizontal="true" android:text="search" />
				<ImageView android:id="@+id/imageView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:src="@drawable/button_search_dock_gray"/>
			</RelativeLayout>

			<RelativeLayout android:id="@+id/main_settings_button"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_marginLeft="1dp" android:layout_marginRight="1dp"
				android:layout_weight="1" android:background="@color/theme_block_background_gray">

				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="5dp" android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true" android:background="@color/theme_green_light">
				</RelativeLayout>

				<TextView android:id="@+id/main_dock_settings_label"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerHorizontal="true" android:text="settings" />
				<ImageView android:id="@+id/imageView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:src="@drawable/button_settings_dock_gray"/>
			</RelativeLayout>

			<RelativeLayout android:id="@+id/main_quiz_button"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_marginLeft="1dp" android:layout_weight="1"
				android:background="@color/theme_block_background_gray">

				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="5dp" android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true" android:background="@color/theme_orange_light">
				</RelativeLayout>

				<TextView android:id="@+id/main_dock_quiz_label"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerHorizontal="true" android:text="quiz" />
				<ImageView android:id="@+id/imageView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:src="@drawable/button_quiz_dock_gray"/>
			</RelativeLayout>
		</LinearLayout>
	</RelativeLayout>

	<RelativeLayout android:id="@+id/main_header"
		android:layout_width="fill_parent" android:layout_height="23dp"
		android:layout_above="@+id/main_header_shadow"
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
		android:background="@color/theme_blue_dark">
		<RelativeLayout android:id="@+id/main_search_box"
			android:layout_width="fill_parent" android:layout_height="165dp" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_marginBottom="5dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
			<RelativeLayout android:id="@+id/main_search_box_body"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_above="@+id/main_search_box_footer"
				android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
				android:background="@drawable/half_block_background">
				<LinearLayout android:id="@+id/linearLayout1"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true" android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp" android:layout_marginTop="4dp"
					android:orientation="vertical">
					<TextView android:id="@+id/main_search_box_title_label"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="Search" android:textColor="@color/theme_text_blue"
						android:textSize="16dp" />
					<TextView android:id="@+id/main_search_box_subtitle_label"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="Provide bird's name or country of occurence"
						android:textColor="@color/theme_text_light_gray" android:textSize="12dp" />
				</LinearLayout>
				<TextView android:id="@+id/main_search_box_advanced_search_link" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignRight="@+id/linearLayout1" android:text="advanced search" android:textColor="@color/theme_text_blue" android:textSize="14dp"/>
				<RelativeLayout android:id="@+id/main_search_box_form"
					android:layout_width="fill_parent" android:layout_height="35dp"
					android:layout_alignLeft="@+id/linearLayout1" android:layout_below="@+id/linearLayout1"
					android:layout_marginBottom="15dp" android:layout_marginLeft="5dp" android:layout_marginRight="10dp" android:layout_marginTop="15dp" android:gravity="center">
					<RelativeLayout android:id="@+id/main_search_box_button"
						android:layout_width="80dp" android:layout_height="fill_parent"
						android:layout_alignParentRight="true"
						android:layout_alignParentTop="true" android:background="@color/theme_blue_light">
						<ImageView android:id="@+id/imageView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:src="@drawable/button_search_white"/>
					</RelativeLayout>
					<EditText android:id="@+id/main_search_box_edit"
						android:layout_width="wrap_content" android:layout_height="fill_parent"
						android:gravity="center_vertical" android:layout_alignParentLeft="true"
						android:layout_alignParentTop="true" android:layout_marginRight="5dp"
						android:layout_toLeftOf="@+id/main_search_box_button" android:ems="10"
						android:background="@drawable/custom_edit_text_background"
						android:paddingLeft="5dp">
						<requestFocus />
					</EditText>
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/main_search_box_footer"
				android:layout_width="fill_parent" android:layout_height="18dp"
				android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true"
				android:background="@drawable/half_block_background_footer"></RelativeLayout>
		</RelativeLayout>
		<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/main_search_box" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignParentTop="true">
			<ImageView android:id="@+id/imageView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:src="@drawable/main_screen_logo"/>
		</RelativeLayout>

	</RelativeLayout>

	<RelativeLayout android:id="@+id/main_header_shadow"
		android:layout_width="fill_parent" android:layout_above="@+id/main_dock_relative_layout"
		android:layout_height="3dp" android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true" android:layout_marginBottom="6dp"
		android:background="@drawable/main_bottom_shadow">

	</RelativeLayout>

</RelativeLayout>