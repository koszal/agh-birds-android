<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/theme_global_background" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/quiz_header_layout" android:layout_width="fill_parent" android:layout_height="40dp">
        <LinearLayout android:id="@+id/quiz_page_indicator_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:orientation="vertical"></LinearLayout>
    </RelativeLayout>
    
	<android.support.v4.view.ViewPager
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/pager" android:layout_above="@+id/tv" android:layout_below="@+id/quiz_header_layout"></android.support.v4.view.ViewPager>
	<TextView android:id="@+id/tv" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:text="TextView"/>
	

</RelativeLayout>