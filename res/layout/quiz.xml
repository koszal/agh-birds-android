<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/theme_global_background"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<android.support.v4.view.ViewPager
		android:id="@+id/quiz_pager" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_above="@+id/tv"
		android:layout_below="@+id/quiz_page_indicator"></android.support.v4.view.ViewPager>
	<TextView android:id="@+id/tv" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:text="TextView" />
	<info.ogorzalek.birds.views.QuizPager
		android:id="@+id/quiz_page_indicator" android:layout_width="fill_parent"
		android:layout_height="40dp" android:layout_alignParentLeft="true"
		android:layout_alignTop="@+id/pager" />


</RelativeLayout>