<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/theme_global_background"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<android.support.v4.view.ViewPager
		android:id="@+id/quiz_pager" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@+id/quiz_page_indicator"></android.support.v4.view.ViewPager>
	<info.ogorzalek.birds.views.QuizPager
		android:id="@+id/quiz_page_indicator" android:layout_width="fill_parent"
		android:layout_height="40dp" android:layout_alignParentLeft="true"
		android:layout_alignTop="@+id/pager" />
	<ProgressBar android:id="@+id/quiz_progress_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
	

</RelativeLayout>